<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".ui.home.HomeFragment">

    <!-- Encabezado -->
    <View
            android:id="@+id/header_background"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#3F51B5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión Pisos Compartidos"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@id/header_background"
            app:layout_constraintBottom_toBottomOf="@id/header_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor de botones -->
    <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/header_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón: Login -->
        <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ir a Login"
                android:backgroundTint="#3F51B5"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginVertical="12dp"/>

        <!-- Botón: Crear Piso -->
        <Button
                android:id="@+id/btn_crear_piso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear Nuevo Piso"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginVertical="12dp"/>

        <!-- Botón: Pizarra -->
        <Button
                android:id="@+id/btn_pizarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abrir Pizarra"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginVertical="12dp"/>

        <!-- Botón: Configuración o futuros módulos -->
        <Button
                android:id="@+id/btn_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuración"
                android:backgroundTint="#9C27B0"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginVertical="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
