<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_task_completed"
    android:padding="16dp">

    <ImageView
        android:id="@+id/taskIconCompleted"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_cancel"
        app:tint="@color/black_alpha_60"
        android:contentDescription="Item completado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskNameCompleted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Leche"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black_alpha_60"
        app:layout_constraintStart_toEndOf="@id/taskIconCompleted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/taskIconCompleted" />
</androidx.constraintlayout.widget.ConstraintLayout>