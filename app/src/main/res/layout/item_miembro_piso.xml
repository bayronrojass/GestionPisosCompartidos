<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#F8F8F8" > <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

    <View
            android:id="@+id/member_color_indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_shape_pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" />

    <TextView
            android:id="@+id/member_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/member_color_indicator"
            app:layout_constraintEnd_toStartOf="@id/member_role_admin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Manolo" />

    <TextView
            android:id="@+id/member_role_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin."
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/rounded_green_tag"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/member_role_you"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:visibility="visible" />

    <TextView
            android:id="@+id/member_role_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃš"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/rounded_orange_tag"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/member_remove_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:visibility="visible" />

    <ImageView
            android:id="@+id/member_remove_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_red_cancel"
            app:tint="@android:color/holo_red_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Eliminar miembro" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>